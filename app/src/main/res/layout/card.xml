<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/linearLayout">

    <TextView
            android:text="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HeroId" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textSize="16sp"
            android:textStyle="bold" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="#FFFFFF" android:background="#74030202"
            android:padding="5dp"/>
    <TextView
            android:text="AhmadDar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HeroName" app:layout_constraintStart_toEndOf="@+id/HeroId"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:textSize="20sp" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>